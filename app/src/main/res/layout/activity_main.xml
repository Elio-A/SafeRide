<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/next_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Go To Next Page"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_button_background"/>

        <Button
            android:id="@+id/go_to_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Go To Log In"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_button_background"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/go_to_Car_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Go To Car Photos"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_button_background"
            android:layout_marginTop="200dp"/>

        <Button
            android:id="@+id/saferide_cars_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:hint="Go To saferide cars Page"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/rectangle_button_background"/>


    </RelativeLayout>




</RelativeLayout>